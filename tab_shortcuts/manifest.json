{
  "manifest_version": 2,

  "name": "Tab shortcuts",
  "description": "This extension provides some keyboard shortcuts for tabe operation",
  "version": "1.0",

  "commands": {
    "show-next-tab": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "MacCtrl+F"
      },
      "description": "Show next tab"
    },
    "show-prev-tab": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "MacCtrl+B"
      },
      "description": "Show previous tab"
    },
    "move-tab-next": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Move current tab to next"
    },
    "move-tab-prev": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Move current tab to previous"
    }
  },

  "background": {
    "persistent": false,
    "scripts": ["tab_shortcuts.js"]
  }
}
